{% extends 'base.html.twig' %}

{% block title %}Créer un article{% endblock %}

{% block body %}
    {% include 'lucky/navbar.html.twig' %}

    <div id="layoutSidenav">
        {% include 'lucky/sidebar.html.twig' %}
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4 text-center">Créer un nouvel article</h1>

                    <!-- Breadcrumb simple -->
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item"><a href="{{ path('app_article') }}">Dashboard</a></li>
                        <li class="breadcrumb-item active">Créer un article</li>
                    </ol>

                    <!-- Messages flash -->
                    {% for type, messages in app.flashes %}
                        <div class="alert alert-{{ type }}" role="alert">
                            {% for message in messages %}
                                <p>{{ message }}</p>
                            {% endfor %}
                        </div>
                    {% endfor %}

                    <!-- Formulaire -->
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5>Informations de l'article</h5>
                        </div>
                        <div class="card-body">
                            {{ form_start(form) }}
                                <div class="mb-3">
                                    {{ form_label(form.titre, 'Titre') }}
                                    {{ form_widget(form.titre, { 'attr': { 'class': 'form-control' } }) }}
                                    {{ form_errors(form.titre) }}
                                </div>
                                <div class="mb-3">
                                    {{ form_label(form.texte, 'Contenu') }}
                                    {{ form_widget(form.texte, { 'attr': { 'class': 'form-control', 'rows': 5 } }) }}
                                    {{ form_errors(form.texte) }}
                                </div>
                                <div class="form-check mb-3">
                                    {{ form_widget(form.publie, { 'attr': { 'class': 'form-check-input' } }) }}
                                    {{ form_label(form.publie, 'Publié') }}
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">Créer l'article</button>
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </main>
            {% include 'lucky/footer.html.twig' %}
        </div>
    </div>
{% endblock %}
