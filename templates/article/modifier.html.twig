{% extends 'base.html.twig' %}

{% block title %}Modifier l'article - {{ article.titre }}{% endblock %}

{% block body %}
    {% include 'lucky/navbar.html.twig' %}
    
    <div id="layoutSidenav">
        {% include 'lucky/sidebar.html.twig' %}
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">Modifier l'article</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item"><a href="{{ path('app_article') }}">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('app_article_list') }}">Liste des articles</a></li>
                        <li class="breadcrumb-item active">Modifier l'article</li>
                    </ol>

                    <div class="card mb-4">
                        <div class="card-header">
                            <h2>Modifier l'article "{{ article.titre }}"</h2>
                        </div>
                        <div class="card-body">
                            {{ form_start(form) }}
                                <div class="form-group">
                                    {{ form_row(form.titre, { 'label': 'Titre de l\'article' }) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(form.texte, { 'label': 'Texte de l\'article' }) }}
                                </div>
                                <div class="form-group mt-3">
                                    {{ form_row(form.publie, { 'label': 'Publi√© ?' }) }}
                                </div>
                                <button type="submit" class="btn btn-primary mt-3">Enregistrer les modifications</button>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </main>
            {% include 'lucky/footer.html.twig' %}
        </div>
    </div>
{% endblock %}
